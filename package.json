{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8080",
    "build": "NEXT_PUBLIC_APP_VERSION=$(node -p \"require('./package.json').version\") NEXT_PUBLIC_BUILD_TIME=$(TZ=Asia/Shanghai date -u +%Y-%m-%dT%H:%M:%S%z) NEXT_PUBLIC_COMMIT_HASH=$(git rev-parse --short HEAD) next build",
    "start": "next start -p 8080",
    "lint": "next lint",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:start:prod": "pm2 start ecosystem.config.js --env production",
    "pm2:start:staging": "pm2 start ecosystem.config.js --env staging",
    "pm2:stop": "pm2 stop nextjs-app",
    "pm2:restart": "pm2 restart nextjs-app",
    "pm2:delete": "pm2 delete nextjs-app",
    "pm2:logs": "pm2 logs nextjs-app",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "next": "14.2.4",
    "next-auth": "^4.24.7",
    "photoswipe": "^5.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.5.0",
    "react-spinners": "^0.14.1",
    "sharp": "^0.34.5",
    "swr": "^2.3.8",
    "wujie": "^1.0.22",
    "wujie-react": "^1.0.14",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5"
  }
}
